<UserControl x:Class="LoginPro.View.ForLogin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LoginPro.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400
             "
             Background="#F5F5F5">
    <Grid>
        <TextBox x:Name="txtUser" HorizontalAlignment="Left" Margin="50,137,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="315"/>
        <TextBox x:Name="txtPass" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="315" Margin="50,230,0,0"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Center" Margin="0,270,0,0" VerticalAlignment="Top" Width="172" Height="39"/>
        <Label x:Name="lblUser" Content="User:" HorizontalAlignment="Left" Margin="43,105,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="Franklin Gothic Demi Cond"/>
        <Label x:Name="lblPassword" Content="Password:" HorizontalAlignment="Left" Margin="43,192,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" FontFamily="Franklin Gothic Demi Cond" Width="120"/>
        <Label x:Name="lblLogin" Content="Login" HorizontalAlignment="Center" VerticalAlignment="Top" Width="156" FontSize="48" FontFamily="Bodoni MT Black" FontWeight="Bold" Height="72" Margin="0,13,0,0"/>

    </Grid>
</UserControl>
