<UserControl x:Class="LoginPro.View.ForSignUp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LoginPro.View"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="400"
             Background="#F5F5F5">

    <Border BorderBrush="#CCCCCC" 
            BorderThickness="1" 
            Margin="20" 
            Padding="30">
        <StackPanel>
            <!-- Título -->
            <TextBlock Text="Registro de Usuario"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>

            <!-- Correo -->
            <TextBlock Text="Correo electrónico:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtCorreo" 
                     Height="35" 
                     FontSize="14"
                     Margin="0,0,0,15"/>

            <!-- Usuario -->
            <TextBlock Text="Nombre de usuario:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtUserName" 
                     Height="35" 
                     FontSize="14"
                     Margin="0,0,0,15"/>

            <!-- Contraseña -->
            <TextBlock Text="Contraseña:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtPassword" 
                         Height="35" 
                         FontSize="14"
                         Margin="0,0,0,15"/>

            <!-- Confirmar Contraseña -->
            <TextBlock Text="Confirmar contraseña:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtConfirmPassword" 
                         Height="35" 
                         FontSize="14"
                         Margin="0,0,0,25"/>

            <!-- Botones -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="btnCancelar"
                        Grid.Column="0"
                        Content="Cancelar"
                        Height="40"
                        FontSize="14"
                        Background="#E0E0E0"
                        BorderThickness="0"
                        Click="btnCancelar_Click"/>

                <Button x:Name="btnSignUp"
                        Grid.Column="2"
                        Content="Registrarse"
                        Height="40"
                        FontSize="14"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        Click="btnSignUp_Click"/>
            </Grid>
        </StackPanel>
    </Border>

</UserControl>
